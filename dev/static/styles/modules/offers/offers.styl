.section

	&--offers
		padding-top: 50px

.offers

	&__items
		@media screen and (max-width $grid-sm-max)
			display flex
			flex-direction column
			align-items center
		.col-3
			@media screen and (max-width $grid-md-max)
				padding-bottom 45px

	&__title
		font-size 24px
		font-family 'Roboto', sans-serif
		font-weight bold
		font-style normal
		color #142f4f
		line-height 28px
		padding-bottom 23px
		text-align center

	&__item
		border: 1px solid #e0e0e0
		border-radius: 10px

	&__item-rating
		display flex
		align-items center
		margin-bottom 10px

	&__shower-img
		padding 0 8px 0
		border-bottom: 1px solid #e0e0e0
		width 100%

	&__item-reviews
		vertical-align: sub
		margin 0 0 0 10px
		border-bottom: 1px dashed #00a6df
		
	&__item-reviews-link
		color: #00a6df
		text-decoration none
		font-size 14px
		font-family 'Roboto', sans-serif

	&__item-descr
		padding 15px
		@media screen and (max-width $grid-lg-max)
			padding 15px 6px

	&__item-text-link

		text-decoration none
		line-height 1.4
		color: inherit
		display block
		margin 0 0 10px
		display: -webkit-box
		display: -moz-box
		-webkit-box-orient: vertical
		-webkit-line-clamp 4
		overflow hidden
		height 78.5px
		font-family 'Roboto', sans-serif
		font-size 15px
		font-weight	400

	&__item-rating-img
		padding-right 4px

	&__item-country
		padding 0 0 10px
		display flex
		align-items center
		border-bottom: 1px solid #e0e0e0
		margin-bottom 10px

	&__item-country-name
		font-size 14px
		font-family 'Roboto', sans-serif
		padding-left 7px

	&__item-price
		font-size 22px
		font-family 'Roboto', sans-serif

	&__item-btns
		padding-top 23px
		display flex
		justify-content space-between
		align-items center

	&__button-more
		color: font-size 14px
		font-family	'Roboto', sans-serif
		color #00a6df
		font-size 14px
		border: 1px solid #00a6df
		padding 8px 12px
		border-radius: 4px
		&:hover
			color #fff
			background-color #00a6df

	&__item-like-svg
		fill: #707379
		width 28px
		height 28px
		&:hover
			fill #e65c00

.col-sm
	&__12
		@media screen and (max-width $grid-sm-max)
			max-width 70%