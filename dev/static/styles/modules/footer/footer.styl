footer
    flex 0 0 auto
    background-color #142f4f

.col-3
    &__links
        display flex
        flex-wrap: wrap
        width 53%

.footer

    &__row
        padding-top 43px
        @media screen and (max-width $grid-xs-max)
            flex-direction column

    &__col
        @media screen and (max-width $grid-xs-max)
            max-width 100%

    &__col-link
        font-size 16px
        color: rgba(255, 255, 255, 0.8)
        font-family 'Roboto', sans-serif
        text-decoration underline
        margin-bottom 13px

    &__col-title
        font-size 18px
        font-weight bold
        font-family 'Roboto', sans-serif
        line-height 21px
        color: #fff
        text-align start
        padding-bottom 13px

    &__col-text
        text-align start
        color: rgba(255, 255, 255, 0.8)
        font-size 16px
        font-family 'Roboto', sans-serif
        letter-spacing: 1px

    &__col-seller-text
        text-align start
        color: rgba(255, 255, 255, 0.8)
        font-size 16px
        line-height 30px
        width 70%
        font-family 'Roboto', sans-serif
        letter-spacing: 1px      

    &__phone-number
        font-size 16px
        font-family 'Roboto', sans-serif
        color: rgba(255, 255, 255, 0.8)
        padding 35px 0 10px
        text-align start

    &__phone-text
        font-size 16px
        font-family 'Roboto', sans-serif
        color: rgba(255, 255, 255, 0.8)
        text-align: start

    &__phone-number-first
        padding-top 0

    &__bottom-text
        font-family 'Roboto', sans-serif
        font-weight normal
        font-style normal
        font-size 16px
        line-height 19px
        color: rgba(255, 255, 255, 0.5);
        text-align center
        padding 45px 0 30px   
         
